<%- include('../header.ejs')%>

   
    <div class="container-fluid mt-5">
        <div class="row">
            <h1 class="mt-5 text-center"
            style="font-family: Arial, Helvetica, sans-serif; font-weight: 700;font-style: italic; color: #172550;">
            Course-Edit
        </h1>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form action="/course_update/<%= d._id %>" method="post">
                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" name="name"
                        value="<%= d.name %>"
                        class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="email"
                        value="<%= d.email %>"
                         class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Phone no.</label>
                        
                        <input type="number" name="phone" value="<%= d.phone %>"  class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>D.O.B</label>
                        <input type="date" name="dob" value="<%= d.dob %>" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Address</label>
                        <textarea name="address" class="form-control">
                            <%= d.address %>
                        </textarea>
                    </div>
                    <div class="mb-3">
                        <label>Gender</label>
                        <input type="radio" value="male" name="gender">Male
                        <input type="radio" value="female" name="gender">FeMale
                    </div>
                    <div class="mb-3">
                        <label>Education</label>
                        <select name="education" class="form-control">
                            <option> select Collage</option>
                            <option>10th</option>
                            <option>12th</option>
                        </select>
                        <div class="mb-3">
                            <label>Course</label>
                            <input type="text" name="course" value="btech" readonly class="form-control">

                        </div>
                        <button type="submit" class="btn btn-success">Update</button>
                </form>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>

    


    <%- include('../footer.ejs')%>